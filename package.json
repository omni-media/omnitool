{
	"name": "@omnimedia/omnitool",
	"version": "1.1.0-0",
	"description": "open source video processing tools",
	"license": "MIT",
	"author": "Przemysław Gałęzki",
	"type": "module",
	"main": "x/index.js",
	"files": [
		"x",
		"s"
	],
	"scripts": {
		"build": "rm -rf x && run-s build-code build-ssg links",
		"build-code": "turtle build --out=x",
		"build-ssg": "turtle ssg --in=s,x --out=x",
		"start": "run-p start-http start-turtle",
		"start-http": "http-server x",
		"start-turtle": "turtle watch --in=s,x --out=x -v",
		"links": "run-s links-s links-assets",
		"links-s": "ln -s \"$(realpath s)\" x/s",
		"links-assets": "ln -s \"$(realpath assets)\" x/assets",
		"test": "node x/example.test.js && node x/driver2/tests/simple.test.js && node x/driver2/tests/cluster.test.js"
	},
	"devDependencies": {
		"@benev/turtle": "^0.6.8",
		"@types/node": "^22.14.1",
		"http-server": "^14.1.1",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@benev/slate": "^0.3.0",
		"@e280/comrade": "^0.0.0-10",
		"mp4-muxer": "^5.2.1",
		"web-demuxer": "^2.3.3"
	},
	"keywords": [
		"tools",
		"video",
		"processing"
	],
	"homepage": "https://github.com/omni-media/omnitool#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/omni-media/omnitool.git"
	},
	"bugs": {
		"url": "https://github.com/omni-media/omnitool/issues"
	}
}
