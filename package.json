{
	"name": "@omnimedia/omnitool",
	"version": "1.1.0-0",
	"description": "open source video processing tools",
	"license": "MIT",
	"author": "Przemysław Gałęzki",
	"type": "module",
	"main": "x/index.js",
	"files": [
		"x",
		"s"
	],
	"scripts": {
		"build": "rm -rf x && run-s _code _esbuild _ssg _ln",
		"_code": "turtle build --out=x",
		"_ssg": "turtle ssg --in=s,x --out=x",
		"_esbuild": "esbuild x/driver/driver.worker.js --outdir=x/driver --bundle --minify --format=esm --target=es2023 --entry-names=[name].bundle --sourcemap \"--external:node:*\" --external:os --external:fs",
		"start": "run-p _http _turtle _esbuild-watch",
		"_http": "http-server x",
		"_turtle": "turtle watch --in=s,x --out=x -v",
		"_esbuild-watch": "npm run _esbuild -- --watch",
		"_ln": "run-s _ln-s _ln-assets",
		"_ln-s": "ln -s \"$(realpath s)\" x/s",
		"_ln-assets": "ln -s \"$(realpath assets)\" x/assets",
		"test": "node x/tests.test.js",
		"test-watch": "node --watch x/tests.test.js",
		"test-debug": "node inspect x/tests.test.js"
	},
	"devDependencies": {
		"@benev/turtle": "^0.6.13",
		"@e280/science": "^0.0.5",
		"@types/node": "^24.0.1",
		"esbuild": "^0.25.5",
		"http-server": "^14.1.1",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@benev/slate": "^0.3.5",
		"@e280/comrade": "^0.0.0-16",
		"@e280/stz": "^0.0.0-22",
		"comrade": "^0.0.3",
		"mp4-muxer": "^5.2.1",
		"pixi.js": "^8.10.1",
		"web-demuxer": "^2.3.8"
	},
	"homepage": "https://github.com/omni-media/omnitool#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/omni-media/omnitool.git"
	},
	"bugs": {
		"url": "https://github.com/omni-media/omnitool/issues"
	},
	"keywords": [
		"tools",
		"video",
		"processing"
	]
}
