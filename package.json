{
	"name": "@omnimedia/omnitool",
	"version": "1.1.0-3",
	"description": "open source video processing tools",
	"license": "MIT",
	"author": "Przemysław Gałęzki",
	"type": "module",
	"main": "x/index.js",
	"files": [
		"x",
		"s"
	],
	"scripts": {
		"build": "run-s _clean _tsc _ln _scute",
		"start": "octo 'scute -vw' 'tsc -w' 'node --watch x/tests.test.js' 'http-server x'",
		"_clean": "rm -rf x && mkdir x",
		"_tsc": "tsc",
		"_ln": "run-s _ln-s _ln-assets",
		"_ln-s": "ln -s \"$(realpath s)\" x/s",
		"_ln-assets": "ln -s \"$(realpath assets)\" x/assets",
		"_scute": "scute -v",
		"test": "node x/tests.test.js",
		"test-debug": "node inspect x/tests.test.js"
	},
	"devDependencies": {
		"@e280/science": "^0.0.5",
		"@e280/scute": "^0.0.0-6",
		"@types/node": "^24.0.14",
		"http-server": "^14.1.1",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@benev/slate": "^0.3.9",
		"@e280/comrade": "^0.0.0-19",
		"@e280/renraku": "^0.5.0-22",
		"@e280/stz": "^0.0.0-30",
		"comrade": "^0.0.3",
		"mediabunny": "^1.4.4",
		"mp4-muxer": "^5.2.1",
		"pixi.js": "^8.10.1",
		"wavesurfer.js": "^7.10.0",
		"web-demuxer": "^2.3.8"
	},
	"homepage": "https://github.com/omni-media/omnitool#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/omni-media/omnitool.git"
	},
	"bugs": {
		"url": "https://github.com/omni-media/omnitool/issues"
	},
	"keywords": [
		"tools",
		"video",
		"processing"
	]
}
